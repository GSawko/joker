(ns joker.test-joker.string
  (:require [joker.string :as str]
            [joker.test :refer [deftest is]]))

(deftest quoted
  (is (= (str #"a\.\(b\.c\)") (str (str/re-quoted "a.(b.c)")))))

(deftest string
  (is (= "a.(b.c)" (str/re-string #"a.(b.c)"))))

(deftest regex
  (is (= (str #"a.b.c") (str #"a.b.c"))))
